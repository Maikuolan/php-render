$canvas->drawLine(10,20, 15,30, 0x000000);
$canvas->drawLine(mt_rand(0,50), mt_rand(0,50), mt_rand(0,50), mt_rand(0,50), 0x000000);

$renderer = new HTMLRender;
file_put_contents(__DIR__ . '/../out.html', $renderer->render($canvas));
